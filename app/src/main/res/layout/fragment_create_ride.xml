<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rides"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.it326.isucarpool.RidesFragment"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="?attr/colorControlHighlight">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="@string/offer_a_ride"
                android:id="@+id/createridetitle"
                android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24sp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/startText"
                android:layout_marginTop="20dp"
                android:hint="@string/start_location"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:padding="6dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/endText"
                android:hint="@string/destination"
                android:layout_marginTop="19dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:padding="6dp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:scrollHorizontally="false"
                android:id="@+id/ridedescription"
                android:hint="@string/enter_a_ride_description" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="@string/departure_date_and_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/departtime" />
        </TableRow>
    </TableLayout>

</LinearLayout>
